<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Modern rounded corners -->
    <corners android:radius="16dp" />
    
    <!-- Background color -->
    <solid android:color="@color/bg_qr_enlarged" />
    
    <!-- Modern border -->
    <stroke
        android:width="2dp"
        android:color="@color/fg_less_significant" />
    
    <!-- Shadow/elevation effect -->
    <gradient
        android:angle="135"
        android:endColor="@color/bg_qr_enlarged"
        android:startColor="@color/bg_qr_enlarged"
        android:type="linear" />
</shape>
