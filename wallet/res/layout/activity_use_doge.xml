<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_level1">

    <!-- Map View -->
    <WebView
        android:id="@+id/webview_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bg_level2"
        android:padding="8dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_show_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show List"
            android:textColor="@color/fg_significant"
            android:background="@color/bg_action_bar"
            android:drawableStart="@drawable/ic_list_white_24dp"
            android:drawablePadding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_config"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_settings_white_24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Configure JSON sources" />
    </LinearLayout>

    <!-- Store List -->
    <LinearLayout
        android:id="@+id/layout_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/bg_level1"
        android:visibility="gone">

        <!-- Filter -->
        <EditText
            android:id="@+id/edit_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Filter stores..."
            android:background="@color/bg_level2"
            android:padding="12dp"
            android:textColor="@color/fg_significant"
            android:textColorHint="@color/fg_insignificant"
            android:textSize="14sp"
            android:layout_margin="8dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:visibility="gone" />

        <!-- Empty State -->
        <TextView
            android:id="@+id/text_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No stores found"
            android:textColor="@color/fg_insignificant"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:visibility="gone" />

        <!-- Store List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_stores"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" />
    </LinearLayout>

</LinearLayout>


