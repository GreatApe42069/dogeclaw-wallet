<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_level1">

    <!-- Warning Banner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_action_bar"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/atomic_swap_experimental_warning"
            android:textColor="@color/fg_insignificant"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Atomic Swaps"
            android:textColor="@color/fg_significant"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initiate a cross-chain atomic swap to exchange BTC or LTC to DOGE."
            android:textColor="@color/fg_insignificant"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btn_initiate_swap"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/atomic_swap_initiate"
            android:textColor="@color/amber"
            android:background="@android:color/transparent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:minWidth="200dp" />
    </LinearLayout>

    <!-- Swaps List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_swaps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:visibility="gone" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/bg_action_bar"
        android:gravity="center">

        <Button
            android:id="@+id/btn_initiate_swap_bottom"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/atomic_swap_initiate"
            android:textColor="@color/amber"
            android:background="@android:color/transparent"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Refresh"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            style="@style/My.Dialog.Button" />
    </LinearLayout>

</LinearLayout>
