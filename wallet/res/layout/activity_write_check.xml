<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_level0">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/bg_level3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/write_check_activity_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant" />

        <Button
            android:id="@+id/btn_create_check"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/write_check_create_new"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_add_24dp"
            android:drawablePadding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            style="@style/My.Dialog.Button" />

    </LinearLayout>

    <!-- Checks List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_checks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_empty_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_check_list_empty"
            android:textSize="16sp"
            android:textColor="@color/fg_less_significant" />

    </LinearLayout>

</LinearLayout>

