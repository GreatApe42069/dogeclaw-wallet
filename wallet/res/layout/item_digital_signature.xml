<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/modal_background_modern"
    android:padding="16dp"
    android:layout_margin="8dp">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant"
            android:background="@color/bg_level2"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/text_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tag: Example"
            android:textSize="12sp"
            android:textColor="@color/fg_significant"
            android:alpha="0.7"
            android:layout_marginStart="12dp"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan 15, 2024 10:30"
            android:textSize="11sp"
            android:textColor="@color/fg_significant"
            android:alpha="0.6" />

    </LinearLayout>

    <!-- Content Row -->
    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Content preview..."
        android:textSize="13sp"
        android:textColor="@color/fg_significant"
        android:alpha="0.8"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="8dp" />

    <!-- Address Row -->
    <TextView
        android:id="@+id/text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="D7Y55...X9K2"
        android:textSize="12sp"
        android:textColor="@color/fg_significant"
        android:fontFamily="monospace"
        android:alpha="0.7"
        android:layout_marginBottom="12dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_view"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/digital_signature_view"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_visibility_24dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="8dp"
            style="@style/My.Dialog.Button" />

        <Button
            android:id="@+id/btn_edit_tag"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/digital_signature_edit_tag"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_label_24dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="8dp"
            style="@style/My.Dialog.Button" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text=""
            android:drawableStart="@drawable/ic_clear_24dp"
            android:gravity="center"
            android:padding="8dp"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:backgroundTint="@color/fg_error"
            style="@style/My.Dialog.Button" />

    </LinearLayout>

</LinearLayout>

