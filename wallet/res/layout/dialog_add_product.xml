<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_level1"
    android:maxHeight="600dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btn_add_category"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="+"
                android:textSize="18sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                style="@style/My.Dialog.Button" />

        </LinearLayout>

        <EditText
            android:id="@+id/edit_category_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Or enter new category name"
            android:textSize="14sp"
            android:textColor="@color/fg_significant"
            android:background="@color/bg_level2"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product or service name"
            android:textSize="14sp"
            android:textColor="@color/fg_significant"
            android:background="@color/bg_level2"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product description"
            android:textSize="14sp"
            android:textColor="@color/fg_significant"
            android:background="@color/bg_level2"
            android:padding="12dp"
            android:minLines="3"
            android:maxLines="5"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight (optional)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product weight"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:textColor="@color/fg_significant"
            android:background="@color/bg_level2"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity (leave empty for unlimited)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stock quantity (empty = unlimited)"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="@color/fg_significant"
            android:background="@color/bg_level2"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price (DOGE) *"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price in Dogecoin"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:textColor="@color/fg_significant"
            android:background="@color/bg_level2"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_select_image"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Select"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_file_24dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                style="@style/My.Dialog.Button" />

            <Button
                android:id="@+id/btn_take_photo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Camera"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_camera_24dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                style="@style/My.Dialog.Button" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@color/bg_level2"
            android:contentDescription="Product image preview"
            android:visibility="visible"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Cancel"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_cancel_24dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                style="@style/My.Dialog.Button" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Save"
                android:textSize="14sp"
                android:drawableStart="@drawable/ic_save_24dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                style="@style/My.Dialog.Button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

