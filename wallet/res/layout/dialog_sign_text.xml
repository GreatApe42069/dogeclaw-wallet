<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Text to Sign -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/digital_signature_enter_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_text_to_sign"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/bg_level2"
            android:padding="16dp"
            android:textColor="@color/fg_significant"
            android:hint="@string/digital_signature_enter_text"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/common_cancel"
                android:textSize="14sp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_cancel_24dp"
                android:drawablePadding="8dp"
                style="@style/My.Dialog.Button" />

            <Button
                android:id="@+id/btn_generate_signature"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/digital_signature_generate_signature_button"
                android:textSize="14sp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:drawableStart="@drawable/ic_signature_24dp"
                android:drawablePadding="8dp"
                style="@style/My.Dialog.Button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

