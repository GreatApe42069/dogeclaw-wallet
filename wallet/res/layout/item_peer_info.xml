<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_list_card"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <!-- Peer IP and Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/peer_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="192.168.1.1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant" />

        <TextView
            android:id="@+id/peer_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":22556"
            android:textSize="14sp"
            android:textColor="@color/fg_significant"
            android:layout_marginStart="4dp" />

        <TextView
            android:id="@+id/peer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Peer Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/peer_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version: 70015"
            android:textSize="12sp"
            android:textColor="@color/fg_significant" />

        <TextView
            android:id="@+id/peer_subversion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sub-version: /Shibetoshi:1.14.6/"
            android:textSize="12sp"
            android:textColor="@color/fg_significant" />

        <TextView
            android:id="@+id/peer_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Services: NODE_NETWORK"
            android:textSize="12sp"
            android:textColor="@color/fg_significant" />

        <TextView
            android:id="@+id/peer_latency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latency: 45ms"
            android:textSize="12sp"
            android:textColor="@color/fg_significant" />

        <TextView
            android:id="@+id/peer_last_seen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last seen: 2m ago"
            android:textSize="12sp"
            android:textColor="@color/fg_significant" />

    </LinearLayout>

</LinearLayout>
