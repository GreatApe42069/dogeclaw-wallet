<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Original Text or File Hash -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/digital_signature_enter_original_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_original_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/bg_level2"
            android:padding="16dp"
            android:textColor="@color/fg_significant"
            android:hint="@string/digital_signature_enter_original_text"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Signature -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/digital_signature_enter_signature"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_signature"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/bg_level2"
            android:padding="16dp"
            android:textColor="@color/fg_significant"
            android:hint="@string/digital_signature_enter_signature"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Doge Address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/digital_signature_enter_address"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_verification_address"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bg_level2"
            android:padding="16dp"
            android:textColor="@color/fg_significant"
            android:hint="@string/digital_signature_enter_address"
            android:inputType="text"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/common_cancel"
                android:textSize="14sp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_cancel_24dp"
                android:drawablePadding="8dp"
                style="@style/My.Dialog.Button" />

            <Button
                android:id="@+id/btn_verify_signature"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/digital_signature_verify_signature_button"
                android:textSize="14sp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:drawableStart="@drawable/ic_verify_24dp"
                android:drawablePadding="8dp"
                style="@style/My.Dialog.Button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

