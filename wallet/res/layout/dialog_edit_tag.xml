<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/bg_level1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Tag"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/fg_significant"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/edit_tag"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_level2"
        android:padding="16dp"
        android:textColor="@color/fg_significant"
        android:hint="Enter tag name"
        android:inputType="text"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_cancel_24dp"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginEnd="12dp"
            style="@style/My.Dialog.Button" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Save"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_save_24dp"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            style="@style/My.Dialog.Button" />

    </LinearLayout>

</LinearLayout>

