<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/qr_dialog_background_modern"
    android:padding="20dp">

    <!-- Header with title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/qr_code"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/fg_significant"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- QR Code with modern styling -->
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/qr_code_background_modern_enhanced"
        android:layout_gravity="center_horizontal">
        
        <ImageView
            android:id="@+id/bitmap_dialog_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/qr_code"
            android:keepScreenOn="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="false" />
            
    </FrameLayout>

</LinearLayout>
