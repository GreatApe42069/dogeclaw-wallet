<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wallet_address_dialog_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/qr_dialog_background_modern"
    android:padding="20dp">

    <!-- Header with title and close button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/qr_code"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant" />

        <ImageButton
            android:id="@+id/wallet_address_dialog_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_clear_24dp"
            android:tint="@color/fg_significant"
            android:contentDescription="Close" />

    </LinearLayout>

    <!-- QR Code with modern styling -->
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/qr_code_background_modern_enhanced"
        android:layout_gravity="center_horizontal">
        
        <ImageView
            android:id="@+id/wallet_address_dialog_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/qr_code"
            android:keepScreenOn="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="false" />
            
    </FrameLayout>

    <!-- Address label with modern styling -->
    <LinearLayout
        android:id="@+id/wallet_address_dialog_label_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/wallet_address_dialog_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/fg_significant"
            android:fontFamily="monospace"
            android:background="@drawable/qr_address_background"
            android:padding="12dp" />

        <TextView
            android:id="@+id/wallet_address_dialog_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/wallet_address_dialog_fragment_hint"
            android:textColor="@color/fg_less_significant"
            android:textSize="@dimen/font_size_small"
            android:alpha="0.8" />
    </LinearLayout>
</LinearLayout>
