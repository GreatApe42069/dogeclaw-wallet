<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multisig_transaction_hex"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/text_transaction_hex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textSize="10sp"
            android:textColor="@color/fg_significant"
            android:background="@color/bg_level1"
            android:padding="8dp"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/qr_code_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/multisig_qr_code" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_share"
                android:layout_marginEnd="4dp"
                style="@style/My.Dialog.Button" />

            <Button
                android:id="@+id/btn_show_qr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/multisig_show_qr"
                android:layout_marginStart="4dp"
                style="@style/My.Dialog.Button" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_broadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multisig_broadcast"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            style="@style/My.Dialog.Button" />

    </LinearLayout>
</ScrollView>

