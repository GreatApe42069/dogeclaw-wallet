<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_list_card"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <!-- Node Address and Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/node_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="192.168.1.1:22555"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/fg_significant" />

        <TextView
            android:id="@+id/node_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discovered"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Node Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <!-- Version Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version: "
                android:textSize="12sp"
                android:textColor="@color/fg_significant"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/node_version"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="70015"
                android:textSize="12sp"
                android:textColor="@color/fg_significant" />

        </LinearLayout>

        <!-- Sub Version Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Version: "
                android:textSize="12sp"
                android:textColor="@color/fg_significant"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/node_sub_version"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/Shibetoshi:1.14.9/"
                android:textSize="12sp"
                android:textColor="@color/fg_significant"
                android:singleLine="true"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Services Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services: "
                android:textSize="12sp"
                android:textColor="@color/fg_significant"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/node_services"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NETWORK &amp; BLOOM"
                android:textSize="12sp"
                android:textColor="@color/fg_significant"
                android:singleLine="true"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Synced Blocks Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synced Blocks: "
                android:textSize="12sp"
                android:textColor="@color/fg_significant"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/node_synced_blocks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4,500,000"
                android:textSize="12sp"
                android:textColor="@color/fg_significant"
                android:singleLine="true"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Last Seen and Latency Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last Seen: "
                android:textSize="12sp"
                android:textColor="@color/fg_significant"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/node_last_seen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2m ago"
                android:textSize="12sp"
                android:textColor="@color/fg_significant" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Latency: "
                android:textSize="12sp"
                android:textColor="@color/fg_significant"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/node_latency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="150ms (Good)"
                android:textSize="12sp"
                android:textColor="@color/fg_significant" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
