<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/bg_level2"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Swap Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text_swap_direction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DOGE → BTC"
                android:textColor="@color/fg_significant"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_swap_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENDING"
                android:textColor="@color/fg_insignificant"
                android:textSize="12sp"
                android:background="@color/bg_level3"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Amounts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/atomic_swap_from_currency"
                    android:textColor="@color/fg_insignificant"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_from_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 DOGE"
                    android:textColor="@color/fg_significant"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textColor="@color/fg_insignificant"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/atomic_swap_to_currency"
                    android:textColor="@color/fg_insignificant"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_to_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.001 BTC"
                    android:textColor="@color/fg_significant"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Secret Hash -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/atomic_swap_secret_hash"
                android:textColor="@color/fg_insignificant"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_secret_hash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="abc123..."
                android:textColor="@color/fg_insignificant"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageButton
                android:id="@+id/btn_copy_hash"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_share"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Copy hash" />
        </LinearLayout>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/text_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created: 2025-01-01 12:00"
            android:textColor="@color/fg_insignificant"
            android:textSize="11sp"
            android:layout_marginBottom="8dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_view_details"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Details"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginEnd="8dp"
                style="@style/My.Dialog.Button" />

            <Button
                android:id="@+id/btn_claim"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Claim"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                style="@style/My.Dialog.Button" />

            <Button
                android:id="@+id/btn_refund"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Refund"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                style="@style/My.Dialog.Button" />
            
            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete_white_24dp"
                android:tint="@color/fg_error"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

