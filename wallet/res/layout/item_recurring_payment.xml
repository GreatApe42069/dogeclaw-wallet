<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/modal_background_modern"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 DOGE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/fg_significant" />

            <TextView
                android:id="@+id/text_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly"
                android:textSize="12sp"
                android:textColor="@color/fg_significant"
                android:alpha="0.7" />

        </LinearLayout>

        <Switch
            android:id="@+id/switch_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Address Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/text_destination_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="To: D7Y55...X9K2"
            android:textSize="14sp"
            android:textColor="@color/fg_significant"
            android:fontFamily="monospace"
            android:singleLine="true"
            android:ellipsize="middle" />

        <TextView
            android:id="@+id/text_next_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next: Jan 15"
            android:textSize="12sp"
            android:textColor="@color/fg_significant"
            android:alpha="0.7" />

    </LinearLayout>

    <!-- Reference Row (if exists) -->
    <LinearLayout
        android:id="@+id/layout_reference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_reference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ref: Payment for services"
            android:textSize="12sp"
            android:textColor="@color/fg_significant"
            android:alpha="0.7"
            android:singleLine="true"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/recurring_payments_edit"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_edit_24dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="8dp"
            style="@style/My.Dialog.Button" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/recurring_payments_delete"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_clear_24dp"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:backgroundTint="@color/fg_error"
            style="@style/My.Dialog.Button" />

    </LinearLayout>

</LinearLayout>
