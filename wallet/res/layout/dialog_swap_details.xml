<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bg_level1">

    <TextView
        android:id="@+id/text_swap_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/fg_significant"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- DOGE Sending Address -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DOGE Sending Address"
        android:textColor="@color/fg_significant"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_doge_sending_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/fg_insignificant"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:background="@color/bg_level2"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Receiving Address (BTC/LTC) -->
    <TextView
        android:id="@+id/text_receiving_address_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receiving Address"
        android:textColor="@color/fg_significant"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_receiving_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/fg_insignificant"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:background="@color/bg_level2"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Transaction ID -->
    <TextView
        android:id="@+id/text_tx_id_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction ID"
        android:textColor="@color/fg_significant"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_tx_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_tx_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/fg_insignificant"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:background="@color/bg_level2"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btn_copy_tx_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_copy_white_24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Copy transaction ID"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Secret Hash -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/atomic_swap_secret_hash"
        android:textColor="@color/fg_significant"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/text_secret_hash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/fg_insignificant"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:background="@color/bg_level2"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btn_copy_hash"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_copy_white_24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Copy hash"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textColor="@color/fg_significant"
        android:background="@color/bg_action_bar" />

</LinearLayout>
</ScrollView>

